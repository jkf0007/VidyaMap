//Hovering menu styling
p{
	padding-top: 0px;
	margin: 0px;
	color:white;
}

table.dropdown{
	margin: 0px;
	padding: 0px; 
	border: 0px; 
	margin-top:0;
	margin-bottom:0;
}

table.menu{
	margin: 0px;
	padding: 0px;
}

td.menuNormal{
	padding: 0px;
	color: white;
	vertical-align: top;
	background-color: rgb(52, 152, 219);
}

td.menuHover{
	padding: 0px;
	color: white;
	vertical-align: top;
	background-color: rgb(41, 128, 185);
}

div.menuNormal{
	display: none;
	position:static;
}

div.menuHover{
	background-color:rgb(52, 152, 219);
	display: inline;
	position: absolute;
}

a.menuitem:link{
	text-decoration: none;
	color: white;
	background-color:rgb(41, 128, 185);
	display: block;
}

a.menuitem:visited{
	text-decoration: none;
	color: white;
	background-color:rgb(41, 128, 185);
	display: block;
}

a.menuitem:hover{
	text-decoration: none;
	color: white;
	background-color: rgb(41, 128, 185);
	display: block;
}

a.menuitem:active{
	text-decoration: none;
	color: white;
	background-color: rgb(41, 128, 185);
	display: block;
}
