body{
	margin:0px;
}

.topbar{
	padding-top:0px;
	width:100%;
	height:relative;
	padding:0;
	background-color:rgb(52, 152, 219);
}

.topbarleft{
	width:50%;
	height:relative;
	float:left;
	padding:0;
	background-color:rgb(52, 152, 219);
}

.topbarleft p{	
	margin-top:0;
	margin-bottom:0;
}

.topbarright{
	width:50%;
	height:relative;
	float:left;
	padding:0;
	background-color:rgb(52, 152, 219);
	display:inline;
}

.topbarmenu{
	background-color:rgb(52, 152, 219);
    text-decoration: none;
	margin-top:0;
	margin-bottom:0;
	float:right;
}

.topbarmenu li{
	display:inline;
}

.topbarmenu li a{
    color: white;
	width:relative;
	height:auto;
	vertical-align:top;
	position:relative;
    padding:5px 10px 0px 10px;
    text-decoration: none;
}

.topbarmenu li a:hover{
    background-color: rgb(41, 128, 185);	
}


